    "Day 7: Camping l'Etoile de Mer",
    "Day 8: Camping du Lion d'Angers",
    "Finish: Nantes"
  ];

  // Create routing control
  const overviewControl = L.Routing.control({
    waypoints: overviewWaypoints,
    createMarker: function(i, wp, nWps) {
      return L.marker(wp.latLng).bindPopup(labels[i]);
    },
    routeWhileDragging: false,
    draggableWaypoints: false,
    addWaypoints: false,
    show: false,
    showAlternatives: false,
    fitSelectedRoutes: true
  }).addTo(mapOverview);

  const overlayOverview = document.getElementById('map-overview-overlay');
  const containerOverview = document.getElementById('map-overview');

  overlayOverview.addEventListener('click', () => {
    containerOverview.classList.add('enabled');
