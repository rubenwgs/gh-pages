    L.latLng(47.68275, -3.18866),  // Day 2: Saint-Cado
    L.latLng(47.98018, -4.44954),  // Day 3: Pors Poulhan
    L.latLng(48.28085, -4.50238),  // Day 4: Camping Gwel Kaër
    L.latLng(48.61671, -4.56448),  // Day 5: Plage de Saint-Cava
    L.latLng(48.66325, -2.84459),  // Day 6: Camping Bellevue Côtes d'Armor
    L.latLng(48.78961, -1.56731),  // Day 7: Camping l'Etoile de Mer
    L.latLng(47.63077, -0.71196),  // Day 8: Camping du Lion d'Angers
