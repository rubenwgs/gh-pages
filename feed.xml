    zoomControl: false
  }).setView([47.22214, -1.51173], 10);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '© OpenStreetMap contributors'
  }).addTo(map);

  const control = L.Routing.control({
    waypoints: [
      L.latLng(47.22214, -1.51173),  // Nantes
      L.latLng(47.11938, -2.09161),  // Optional stop
      L.latLng(47.24062, -2.27046)   // Saint-Nazaire
    ],
    createMarker: function(i, wp, nWps) {
      if (i === 0) return L.marker(wp.latLng).bindPopup("Start: Nantes");
      if (i === nWps - 1) return L.marker(wp.latLng).bindPopup("Finish: Saint-Nazaire");
      return null;
