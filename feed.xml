    <h2 id="day-4-not-pointe-du-raz">
      Day 4 - Not Pointe du Raz
    </h2>

  <ul>
    <li><b>Route:&nbsp;Pors Poulhan to Pen an Ero via Plogoff and Pen Hir</b></li><li><b>Distance:&nbsp;130km</b></li><li><b>Overnight spot:&nbsp;<a href="https://maps.app.goo.gl/pZvWqp6QvLw5PABt7" target="_blank">Camping Gwel Kaër</a></b></li>
  </ul>
<div><div class="map-wrapper">
  <div id="map-day4" class="leaflet-map"></div>
  <div class="map-overlay" id="map-day4-overlay">Click to activate map</div>
</div>

<script>
  const map4 = L.map('map-day4', {
    zoomControl: false
  }).setView([48.14052, -4.43613], 9);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '© OpenStreetMap contributors'
  }).addTo(map4);

  const control4 = L.Routing.control({
    waypoints: [
      L.latLng(47.98018, -4.44954),
      L.latLng(48.03739, -4.71225),
      L.latLng(48.08973, -4.33375),
      L.latLng(48.25839, -4.62128),
      L.latLng(48.28085, -4.50238)
    ],
    createMarker: function(i, wp, nWps) {
      if (i === 0) return L.marker(wp.latLng).bindPopup("Start: Pors Poulhan");
      if (i === 1) return L.marker(wp.latLng).bindPopup("Monsieur Papier");
      if (i === 3) return L.marker(wp.latLng).bindPopup("Pen Hir");
      if (i === nWps - 1) return L.marker(wp.latLng).bindPopup("Finish: Camping Gwel Kaër");
      return null;
    },
    routeWhileDragging: false,
    draggableWaypoints: false,
    addWaypoints: false,
    show: false,
    showAlternatives: false,
    fitSelectedRoutes: true
  }).addTo(map4);

  const overlay4 = document.getElementById('map-day4-overlay');
  const container4 = document.getElementById('map-day4');

  overlay4.addEventListener('click', () => {
    container4.classList.add('enabled');
    overlay4.classList.add('hidden');
  });

  container4.addEventListener('mouseleave', () => {
    container4.classList.remove('enabled');
    overlay4.classList.remove('hidden');
  });
